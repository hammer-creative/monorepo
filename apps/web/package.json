{
  "name": "hammer/web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "clean": "rm -rf .next node_modules",
    "dev": "next dev",
    "dev:web:watch": "next dev",
    "build": "next build",
    "start": "next start",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "eslint \"**/*.{ts,tsx}\" --cache --fix --format stylish",
    "lint:summary": "eslint \"**/*.{ts,tsx}\" -f summary",
    "lint:verbose": "eslint \"**/*.{ts,tsx}\" --debug"
  },
  "dependencies": {
    "@chorusworks/contentful": "workspace:*",
    "@chorusworks/ui": "workspace:*",
    "@contentful/live-preview": "^4.6.50",
    "@contentful/rich-text-react-renderer": "^16.1.5",
    "dompurify": "^3.3.0",
    "isomorphic-dompurify": "^2.30.1",
    "modern-normalize": "^3.0.1",
    "next": "15.5.5",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@chorusworks/eslint-config": "workspace:*",
    "@contentful/rich-text-types": "^17.2.4",
    "@lehoczky/postcss-fluid": "^1.0.3",
    "@types/dompurify": "^3.2.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint-config-next": "^15.5.6",
    "postcss": "^8.5.6",
    "postcss-import": "^16.1.1",
    "postcss-load-config": "^6.0.1",
    "postcss-mixins": "^12.1.2",
    "postcss-nested": "^7.0.2",
    "postcss-preset-env": "^10.4.0",
    "postcss-simple-vars": "^7.0.1",
    "react-viewport-size": "^1.7.0",
    "stylelint": "^16.25.0",
    "stylelint-config-standard": "^39.0.1",
    "stylelint-order": "^7.0.0",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{js,ts,tsx,jsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}

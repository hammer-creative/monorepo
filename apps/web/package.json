{
  "name": "hammer/web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "clean": "rm -rf .next node_modules",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "eslint \"**/*.{ts,tsx}\" --cache --fix --format stylish",
    "lint:summary": "eslint \"**/*.{ts,tsx}\" -f summary",
    "lint:verbose": "eslint \"**/*.{ts,tsx}\" --debug"
  },
  "dependencies": {
    "@chorusworks/contentful": "workspace:*",
    "next": "15.5.5",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@chorusworks/eslint-config": "workspace:*",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint-config-next": "^15.5.6",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{js,ts,tsx,jsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}

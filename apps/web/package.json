{
  "name": "hammer/web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "clean": "rm -rf .next node_modules",
    "dev": "next dev",
    "dev:watch": "next dev",
    "build": "next build",
    "start": "next start",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"**/*.{ts,tsx}\" --cache --fix --format stylish",
    "lint:summary": "eslint \"**/*.{ts,tsx}\" --cache --format summary",
    "lint:verbose": "eslint \"**/*.{ts,tsx}\" --cache --debug --format stylish",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "dependencies": {
    "@chorusworks/ui": "workspace:*",
    "@sanity/image-url": "^1.2.0",
    "modern-normalize": "^3.0.1",
    "next": "15.5.5",
    "next-sanity": "^11.6.2",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@chorusworks/eslint-config": "workspace:*",
    "@eslint/eslintrc": "^3.3.1",
    "@lehoczky/postcss-fluid": "^1.0.3",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint-config-next": "^15.5.6",
    "postcss": "^8.5.6",
    "postcss-import": "^16.1.1",
    "postcss-load-config": "^6.0.1",
    "postcss-mixins": "^12.1.2",
    "postcss-nested": "^7.0.2",
    "postcss-preset-env": "^10.4.0",
    "postcss-simple-vars": "^7.0.1",
    "stylelint": "^16.25.0",
    "stylelint-config-standard": "^39.0.1",
    "stylelint-order": "^7.0.0",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{js,ts,tsx,jsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}

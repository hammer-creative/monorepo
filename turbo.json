// turbo.json
{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "typegen": {
      "outputs": ["../../apps/web/src/types/sanity.generated.ts"],
      "cache": true
    },
    "build": {
      "dependsOn": ["^build", "typegen"],
      "outputs": ["dist/**", ".next/**", "out/**"],
      "cache": true
    },
    "dev:watch": {
      "dependsOn": ["typegen"],
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^lint"],
      "cache": true,
      "outputs": []
    },
    "lint:fix": {
      "cache": false,
      "outputs": []
    },
    "typecheck": {
      "dependsOn": ["^typecheck", "typegen"],
      "cache": true,
      "outputs": []
    },
    "format": {
      "cache": false,
      "outputs": []
    },
    "clean": {
      "cache": false
    }
  }
}

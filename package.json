{
  "name": "hammer-monorepo",
  "version": "1.0.1",
  "description": "Monorepo for Hammer project",
  "packageManager": "pnpm@10.12.4",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "setup": "pnpm clean && pnpm install -w",
    "clean": "turbo run clean && rm -rf node_modules pnpm-lock.yaml .turbo",
    "dev:watch": "turbo run dev:watch",
    "dev:netlify": "concurrently \"turbo run --parallel\" \"netlify dev --cwd apps/web\"",
    "build": "turbo run build --force",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "lint:summary": "turbo run lint:summary",
    "lint:verbose": "turbo run lint:verbose",
    "format": "prettier --write \"apps/**/*.{ts,tsx,md}\" \"packages/**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@chorusworks/eslint-config": "workspace:*",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/node": "^20.19.21",
    "concurrently": "^9.2.1",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.2",
    "husky": "^8.0.3",
    "lint-staged": "^15.5.2",
    "netlify-cli": "^23.9.1",
    "prettier": "^3.6.2",
    "turbo": "^2.5.8",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "$verbose": true,
    "*.{js,ts,tsx,jsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
